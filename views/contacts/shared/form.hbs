<div class="container">
  <h1>Add/Edit Contact</h1>
  <hr>
  <form class="well" method="post" action="/contacts">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="first_name">First Name</label>
          <input type="text" name="first_name" class="form-control" id="first_name" placeholder="First Name">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="last_name" >Last Name</label>
          <input type="text" class="form-control" name='last_name' id="last_name" placeholder="Last Name">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="phone_number">Phone Number</label>
          <input type="text" name='phone_number' value="" class="form-control" id="phone_number" placeholder="Phone Number">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="email_address">Email</label>
          <input type="text" name='email_address' value="0" min="0" max="5" class="form-control" id="email_address" placeholder="Email">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="contact_picture">Contact Picture</label>
          <input type="text" name="image_url" class="form-control" id="contact_picture" placeholder="Contact Image">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="address_line1">Address</label>
          <input type="text" name="line_1" id="address_line1">
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="address_line2"></label>
            <input type="text" name="line_2" id="address_line2">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="city">City</label>
            <input type="text" name="city" id="city">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="zip">Zip Code</label>
            <input type="text" name="zip" id="zip">
          </div>
        </div>

      </div>

    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
